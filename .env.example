# Task Management System Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/taskmanagement?retryWrites=true&w=majority&appName=Cluster0

# External API Keys (Optional - system will fallback to mock responses)
OPENAI_API_KEY=demo-key

# AI Python Service Configuration
AI_SERVICE_DEBUG=false
MODEL_CACHE_SIZE=100
MAX_CONCURRENT_REQUESTS=10
MODEL_TIMEOUT_SECONDS=30
MEMORY_LIMIT_MB=2048
LOG_LEVEL=INFO

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Analytics Configuration
ANALYTICS_CALCULATION_MIN_DATA_POINTS=5
ANALYTICS_CALCULATION_TREND_ANALYSIS_DAYS=30
ANALYTICS_CALCULATION_CACHE_TTL_MINUTES=15
ANALYTICS_INSIGHTS_CONFIDENCE_THRESHOLD=0.7
ANALYTICS_INSIGHTS_MAX_RECOMMENDATIONS=5
ANALYTICS_PREDICTION_ENABLED=true
ANALYTICS_PREDICTION_FORECAST_DAYS=7
ANALYTICS_PREDICTION_MODEL_ACCURACY_THRESHOLD=0.8

# Service Discovery
EUREKA_SERVER_URL=http://eureka-server:8761/eureka

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true